<?xml version="1.0" encoding="UTF-8"?>

<!-- Controller -->
<!--Button, Label, and many more-->
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="com.javafxproject.HelloController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="16" vgap="24"
          gridLinesVisible="true">
    <Button GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            text="Hallo!"
            style="-fx-border-width:32"
            wrapText="true">
        <font>
            <Font name="SF Compact Display BOLD" size="24"/>
        </font>
        <graphic>
            <ImageView fitHeight="32" fitWidth="32">
                <Image url="https://www.kindpng.com/picc/m/392-3927179_wbd-soft-svg-icon-url-icon-png-transparent.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Label text="TEST" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Arial BOLD"/>
        </font>
    </Label>

    <Label text="This is Mountain" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <graphic>
            <ImageView fitWidth="100" fitHeight="100">
                <Image url="https://image.shutterstock.com/image-photo/small-mountain-lake-dolomite-alps-260nw-708476572.jpg"/>
            </ImageView>
        </graphic>
    </Label>
</GridPane>
































